<div class="middlecontent">
  <div class="jumbotron">
    <h1>Dashboard</h1>
  </div>
  <%  if(current_user.type=="Manager"||current_user.type=="Creator"||current_user.type=="Developer")  %>
  <div class="container fullcontainer">
    <div class="row">
      <% if(current_user.type=="Manager") %>
      <div class="col-md-4">
        <% else  %>
        <div class="col-md-6">
          <% end %>
          <div class="card">
            <%= image_tag("project.svg", :alt => "Total projects created", class: "card-img-top") %>
            <div class="card-body">
              <%if(current_user.type=="Manager") %>
              <h4 class="card-title">Total projects created</h4>
              <% else %>
              <h4 class="card-title">Total projects invovled</h4>
              <% end %>
              <p class="card-text"><%= @projects.count  %></p>
            </div>
          </div>
        </div>

        <% if(current_user.type=="Manager") %>
        <div class="col-md-4">
          <% else  %>
          <div class="col-md-6">
            <% end %>

            <div class="card">
              <%if(current_user.type=="Manager") %>
              <%= image_tag("developers.svg", :alt => "Total projects created", class: "card-img-top") %>
              <div class="card-body">
                <h4 class="card-title">Total Quality assurance assign</h4>
                <p class="card-text"><%=  @totalprojectcreators %></p>
              </div>
              <% else %>
              <%= image_tag("bug-solid.svg", :alt => "Total projects created", class: "card-img-top") %>
              <div class="card-body">
                <% if current_user.type=="Creator" %>
                <h4 class="card-title">Total Bugs Reported</h4>
                <p class="card-text"><%=  @totalbugs %></p>
                <% else %>
                <h4 class="card-title">Total Bugs invovled</h4>
                <p class="card-text"><%=  @totalbugs %></p>
                <%end%>
              </div>
              <% end %>
            </div>
          </div>

          <%if(current_user.type=="Manager") %>
          <div class="col-md-4">
            <div class="card">
              <%= image_tag("developers.svg", :alt => "Total projects created", class: "card-img-top") %>
              <div class="card-body">
                <h4 class="card-title">Total developers assign</h4>
                <p class="card-text"><%= @totalprojectdevelopers  %></p>
              </div>
            </div>
          </div>
          <% end %>
        </div>

      </div>


      <% end %>
    </div>